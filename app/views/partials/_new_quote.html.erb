<%= form_for(@newQuote) do |f| %>

  <div class="field">
    <%= f.label :quote %><br />
    <%= f.text_area :quote, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_field :source %>
  </div>

  <div class="actions">
    <%= f.submit "Quote it!" %>
  </div> 
<% end %>


