<div class="jumbotron">
  <p><%= @username %>'s Favorite Quote:</p>
  <p><%= @user.favorite_quote %></p>
  <p><%= @user.favorite_quote_source %></p>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>About <%= @username %></p>
        <p><%= @user.about %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div><%= render "partials/new_quote" %></div>
      </div>
    </div>
    <% for @quote in @quotes %>    
      <div class="panel panel-default">
        <div class="panel-body">
          <p><%= @quote.quote %></p>
          <p><%= @quote.source%></p>
          <p><%= link_to @quote.user.username, profile_path(@quote.user.username) %></p>
        </div>
      </div> 
    <% end %>   
  </div>
  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>List of users to follow</p>
      </div>
    </div>
  </div>
</div>


